        transition: 0.5s ease-in-out;
        
    }
    .card a:hover {
        transform: scale(1.1);
    }



    .descrip {
        background-color: rgb(189, 0, 33);
        width: 300px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0 0 5px 5px ;
        
        
        
        
    }
    .descrip H3 {
        color: #fff;
        font-size: 20px;
        font-weight: 400;
        margin: 0;
    }
    .descrip svg {
        color: #fff;
        padding-left: 5px;
