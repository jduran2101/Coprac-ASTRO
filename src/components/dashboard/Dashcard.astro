---
const {link , img, titulo  } = Astro.props
---

<article class="card">
    <a href={link} target="_blank">
        <img src={img} alt="" />
        <div class="info">
            <h4>{titulo}</h4>
        </div>
    </a>
</article>

<style>
    article {
        width: 300px;
        height: 100px;
        border: 2px solid rgb(189, 0, 33);
        border-radius: 10px;
        overflow: hidden;
        box-shadow:
            rgb(189, 0, 33, 0.35) 0px 50px 100px -20px,
            rgb(189, 0, 33, 0.35) 0px 30px 60px -30px,
            rgba(189, 0, 33, 0.35) 0px -2px 6px 0px inset;

        img {
            width: 100%;
            height: 80%;
            object-fit: cover;
            object-position: center;
        }
    }

    .card a {
        width: 300px;
        height: 100px;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        .info {
            width: 300px;
            height: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgb(189, 0, 33);
            h4 {
                font-size: 15px;
                font-weight: 400;
                text-align: center;
                color: #fff;
                margin: 0;
                padding: 0;
            }
        }
    }
    @media (max-width: 900px) {
        article {
            width: 350px;
            
        }
        .card a {
            width: 100%;
            .info {
                width: 100%;
            }
        }
    }
</style>
