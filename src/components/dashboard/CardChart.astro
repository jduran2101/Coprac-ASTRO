    const ctx = document.getElementById("chart");

    new Chart(ctx, {
        type: "bar",
        data: {
            labels: ["enero", "febrero", "marzo", "abril", "mayo", "junio"],
            datasets: [
                {
                    label: "Despachos",
                    data: [65, 59, 80, 81, 56, 55, 40],
                    
                    backgroundColor: [
                        "rgba(255, 99, 132, 0.2)",
