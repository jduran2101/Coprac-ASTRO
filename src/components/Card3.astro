---
interface Props {
    title:string;
    img:string;
}
const {title, img} = Astro.props
---

<div class="card">
    <a href="">
   <img src={img} alt="">
    <div class="descrip">
        <svg  xmlns="http://www.w3.org/2000/svg"  width="20"  height="20"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  
        class="icon icon-tabler icons-tabler-outline icon-tabler-link"><path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M9 15l6 -6" /><path d="M11 6l.463 -.536a5 5 0 0 1 7.071 7.072l-.534 .464" /><path d="M13 18l-.397 .534a5.068 5.068 0 0 1 -7.127 0a4.972 4.972 0 0 1 0 -7.071l.524 -.463" /></svg>
        <div class="prob">
        <h3>{title}</h3>
        </div>
    </div>
    </a>
</div>


<style>
    .card h3 {
        color: #fff;
    }
    .card img {
        border-radius: 5px 5px 0 0;
        width: 100%;
        height: 70%;
        object-fit: cover;
        object-position: center;
    }
    
    .card a {
        width: 300px;
        height: 100px;
        display: flex;
        text-decoration: none;
        
        flex-direction: column;
        align-items: center;
        /*background-image:url(../asset/servicioH.jpg) ;
