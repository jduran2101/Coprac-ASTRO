---
import LayoutLogin from "../layouts/LayoutLogin.astro";
import "@fontsource-variable/quicksand";
import "@fontsource/abel";
---

<LayoutLogin title="Login">
    <div class="form-act">
        <div class="cuerpo">
            <h3>CO<span>PRAC</span> LTD.</h3>
            <h2>ACCESO</h2>
            <form>
                <div class="inputdiv">
                    <label for="email">Email</label>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="23"
                        height="23"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-mail"
                    >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
                        ></path><path d="M3 7l9 6l9 -6"></path>
                    </svg>
                    <input type="email" name="email" />
                </div>

                <div class="inputdiv">
                    <label for="password">Password</label>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="23"
                        height="23"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-lock"
                    >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M5 13a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v6a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-6z"
                        ></path><path d="M11 16a1 1 0 1 0 2 0a1 1 0 0 0 -2 0"
                        ></path><path d="M8 11v-4a4 4 0 1 1 8 0v4"></path></svg
                    >
                    <input type="password" name="password" />
                </div>
                <label class="chek">
                    <input type="checkbox" />Remember Me
                </label>

                <div class="ship">
                    <button id="btn-sub" type="submit">Ingresar</button>
                    <a href="/info">Registro</a>
                </div>
            </form>
        </div>
    </div>
</LayoutLogin>
<script>
    import { actions } from "astro:actions";
    import Swal from "sweetalert2";

    const form = document.querySelector("form") as HTMLFormElement;
    const btn = document.querySelector("#btn-sub");

    form.addEventListener("submit", async (e) => {
        e.preventDefault();
        btn.setAttribute("disable", "disable");

        const formData = new FormData(form);
        const { error } = await actions.loguinUser(formData);
        if (error) {
            Swal.fire({
                icon: "error",
                title: "error al ingresar",
                text: error.message,
            });
            btn.removeAttribute("disable");
            return;
        }

        window.location.replace("/protected");
    });
</script>

<style>
    .form-act {
        width: 400px;
        height: 500px;
        border-radius: 20px;
        backdrop-filter: blur(5px);
        border: 2px solid #fff;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cuerpo h2 {
        text-align: center;
        font-size: 32px;
        color: #fff;
    }
    .cuerpo h3 {
        color: #fff;
        font-size: 35px;
        font-family: "Abel", sans-serif;
        text-align: center;
        span {
            color: rgb(189, 0, 33);
            font-family: "Abel", sans-serif;
        }
    }

    .inputdiv {
        color: #fff;
        margin: 25px 0 10px;
        display: flex;
        flex-direction: column;
        position: relative;
        svg {
            position: absolute;
            bottom: 10px;
            left: 290px;
            color: rgb(189, 0, 33);
        }
        label {
            font-size: 18px;
            padding-left: 5px;
            padding-bottom: 3px;
        }
    }
    .inputdiv input {
        width: 100%;
        height: 40px;
        background-color: transparent;
        border: 2px solid #fff;
        outline: none;
        border-radius: 10px;
        font-size: 18px;
        color: #fff;
        text-align: center;
    }
    .chek {
        font-size: 15px;
        color: #fff;
        padding-left: 10px;
    }
    .chek input {
        margin-right: 5px;
    }

    form button {
        margin-top: 30px;
        padding: 10px 135px;
        border: none;
        border-radius: 25px;
        font-size: 16px;
        font-weight: 600;
        color: rgb(189, 0, 33);
    }
    .ship {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: auto;
    }
    .ship a {
        margin-top: 20px;
        padding: 10px 130px;
        background-color: #fff;
        text-decoration: none;
        border-radius: 25px;
        font-size: 16px;
        font-weight: 600;
        color: rgb(189, 0, 33);
    }
    @media (max-width: 900px) {
        .form-act {
            width: 380px;
            height: auto;
            display: flex;
            align-items: start;
            justify-content: center;
        }
        .cuerpo {
            padding: 10px;
        }
        .inputdiv input {
            height: 45px;

            font-size: 20px;
            font-weight: 600;
        }
        form button {
            padding: 10px 135px;
        }
        .ship a {
            padding: 10px 130px;
        }
    }
</style>
