---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</div>
<style>
	.link-card {
		
		width: 500px;
		height: 200px;
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: rgb(44, 44, 42);
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		color: #fff;
		margin: 0;
		
		
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		font-size: 17px;
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	
</style>
